<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
                android:id="@+id/kryptanium_login_cancel"
                style="@style/kryptanium_textview_2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/kryptanium_default_gap"
                android:padding="0dp"
                android:text="@string/kryptanium_cancel"
                android:textColor="@color/kryptanium_text_blackish_green"
                android:textSize="@dimen/kryptanium_fontsize_big" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
       >
        <TextView 
             android:id="@+id/s_kt_game_relogin_info"
             android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/s_kt_game_relogin"
            style="@style/kryptanium_button_style_main"
            android:layout_gravity="center_horizontal"
            android:text="@string/s_kt_game_relogin"
             />
    </LinearLayout>
</FrameLayout>