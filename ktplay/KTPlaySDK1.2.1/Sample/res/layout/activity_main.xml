<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.ktplay.sample.BasicGLSurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    		<LinearLayout
    		    android:layout_width="fill_parent"
    		    android:layout_height="fill_parent"
    		    android:orientation="vertical"
    		     >
    		<FrameLayout 
    		    android:layout_width="280dp"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_horizontal"
        		android:layout_marginTop="80dp"
    		    >
        <Button
            android:id="@+id/btn_showkt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/standard_feature" />
        	
        		<ImageView
        		android:id="@+id/img_new_msg" 
        		android:layout_width="12dp"
            	android:layout_height="12dp"
            	android:src="@drawable/new_msg_hint"
            	android:layout_gravity="right"
            	android:visibility="gone"
        		    />
        </FrameLayout>
        
    		<Button
            android:id="@+id/btn_login_feature"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/login_feature" 
            android:layout_gravity="center_horizontal"
            />
    		
    		<Button
            android:id="@+id/btn_friend_feature"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/friend_feature" 
            android:layout_gravity="center_horizontal"
            />
    		
    		<Button
            android:id="@+id/btn_leaderboard_feature"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/leaderboard_feature" 
            android:layout_gravity="center_horizontal"
            />
    		</LinearLayout>
</FrameLayout>